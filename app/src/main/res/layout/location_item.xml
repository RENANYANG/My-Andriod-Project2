<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/location_id_text" />

        <TextView
            android:id="@+id/location_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_name" />

        <TextView
            android:id="@+id/location_lat"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_lat"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/location_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="/" />

        <TextView
            android:id="@+id/location_lng"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_lng" />

        <ImageButton
            android:id="@+id/delete_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/presence_busy" />
    </LinearLayout>
</LinearLayout>